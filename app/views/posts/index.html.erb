<h1>Lista de posts</h1>

<h2>Busqueda de posts</h2>
<%= form_tag({:controller => 'posts', :action => 'index'}, :method => 'get') do %>
  <%= label_tag 'Contenido' %>
  <%= text_field_tag 'search', params[:search]  %>
  <br />
  <%= label_tag 'Categoria' %>
  <%= text_field_tag 'category', params[:category]  %>
  <br />
  <%= submit_tag 'Enviar' %>
<% end %>
<br>
<%= link_to "Reporte", "/posts/report"  %>
<br><br>
<div class="table-responsive">
<table class="table table-bordered">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Contenido</th>
      <th>Categoria</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= post.category %></td>
        <td><%= link_to image_tag('icono_view.png') , post %></td>
        <td><%= link_to image_tag('icono_edit.png') , edit_post_path(post) %></td>
        <td><%= link_to image_tag('icono_anular.png') , post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Nuevo Post', new_post_path %>
